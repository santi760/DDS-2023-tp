{{#partial "contenido"}}
    <div style="margin-top: 50px;">
        <h2>Entidades</h2>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Nombre</th>
            </tr>
            </thead>
            <tbody>
            {{#each Entity}}
                <tr>
                    <td>{{ name }}</td>
                    <td>{{ description }}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    <div style="text-align: center;">
        <a class="btn btn-primary" href="/controlOrganism/providerEntities">Volver</a>
    </div>
{{/partial}}
{{> templates/components/layout/LayoutBaseOrgControl}}