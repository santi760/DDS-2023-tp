<body class="text-center">
  {{> templates/components/layout/navbar/index_for_not_loged }}
  <main class="form-signin">

    <form id="registro-form" method="POST" action="/sign-in">
      <img class="mb-4" src="../assets/brand/bootstrap-logo.svg" alt="" width="72" height="57" />
      <h1 class="h3 mb-3 fw-normal">¡Regístrate!</h1>


      <div class="form-floating">
        <input name="username" type="text" class="form-control" id="inputNombre" placeholder="Tu Nombre" required />
        <label for="inputNombre">Ingresa tu nombre de Usuario</label>
      </div>

      <div class="form-floating">
        <input name="name" type="text" class="form-control" id="inputNombre" placeholder="Tu Nombre" required />
        <label for="inputNombre">Ingresa tu Nombre</label>
      </div>



      <div class="form-floating">
        <input name="surname" type="text" class="form-control" id="inputApellido" placeholder="Tu Apellido" required />
        <label for="inputApellido">Ingresa tu Apellido</label>
      </div>

      <div class="form-floating">
        <input name="email" type="email" class="form-control" id="inputEmail" placeholder="name@example.com" required />

        <label for="inputEmail">Ingresa tu Email</label>

      </div>

      <div class="form-floating" style="width: 200px">
        <input name="password" type="password" class="form-control" id="inputPassword" placeholder="Password"
          required />
        <label for="inputPassword">Ingresa tu contraseña</label>

      </div>

      <button class="w-100 btn btn-lg btn-primary" type="submit">Registrarse</button>
      <p class="mt-5 mb-3 text-muted">UTN - 2023</p>
    </form>

    <div>

      {{listOfValidations}}

    </div>
  </main>

  <!-- jQuery and Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

